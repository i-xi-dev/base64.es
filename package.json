{
  "name": "@i-xi-dev/base64",
  "version": "1.2.1",
  "description": "A JavaScript Base64 encoder and decoder, implements Forgiving base64 defined in WHATWG Infra Standard.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./node/index.mjs",
      "default": "./dist/index.js"
    },
    "./stream": {
      "node": "./node/stream/index.mjs",
      "default": "./dist/stream/index.js"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && webpack",
    "clean": "node -e \"fs.rmSync(`dist`, { recursive:true, force:true })\"",
    "lint": "eslint --ext ts --fix ./src/",
    "test": "jest",
    "test-dist:node": "mocha test/common/ --recursive",
    "test-dist:browser": "web-test-runner \"test/**/*.test.js\" --node-resolve --playwright --browsers chromium firefox webkit",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-xi-dev/base64.es.git"
  },
  "keywords": [
    "base64",
    "forgiving-base64",
    "stream",
    "transformstream",
    "browser",
    "deno",
    "nodejs"
  ],
  "author": "i-xi-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-xi-dev/base64.es/issues"
  },
  "homepage": "https://github.com/i-xi-dev/base64.es#readme",
  "files": [
    "dist",
    "node"
  ],
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@i-xi-dev/fundamental": "^1.6.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@web/test-runner": "^0.13.27",
    "@web/test-runner-playwright": "^0.8.8",
    "babel-jest": "^27.5.1",
    "eslint": "^8.9.0",
    "jest": "^27.5.1",
    "mocha": "^9.2.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
