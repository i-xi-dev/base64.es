{
  "name": "@i-xi-dev/base64",
  "version": "1.1.3",
  "description": "A JavaScript Base64 encoder and decoder, implements Forgiving base64 defined in WHATWG Infra Standard.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./node/index.mjs",
      "default": "./dist/index.js"
    },
    "./stream": {
      "node": "./node/stream/index.mjs",
      "default": "./dist/stream/index.js"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && webpack",
    "clean": "node -e \"fs.rmSync(`dist`, { recursive:true, force:true })\"",
    "lint": "eslint --ext ts --fix ./src/",
    "test": "jest && mocha test/node/ --recursive",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-xi-dev/base64.es.git"
  },
  "keywords": [
    "base64",
    "forgiving-base64",
    "stream",
    "transformstream",
    "browser",
    "deno",
    "nodejs"
  ],
  "author": "i-xi-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-xi-dev/base64.es/issues"
  },
  "homepage": "https://github.com/i-xi-dev/base64.es#readme",
  "files": [
    "dist",
    "node"
  ],
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@i-xi-dev/fundamental": "^1.5.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.5",
    "eslint": "^8.6.0",
    "jest": "^27.4.5",
    "mocha": "^9.1.3",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
